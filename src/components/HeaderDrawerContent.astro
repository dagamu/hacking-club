---
import siteInfo from "~/data/site-info.js";
import SocialLinks from "./SocialLinks.astro";

const socialLinks = siteInfo.socialLinks.filter((link) => !link.footerOnly);
---

<nav aria-label="Primary">
	<a href="/posts/" rel="prefetch" class="link"> Posts</a>
	<a href="/categories/" rel="prefetch" class="link"> Categories</a>
	<a href="/about/" rel="prefetch" class="link"> About</a>
	<div>
		<SocialLinks links={socialLinks} />
		<a class="btn" href="#">Create Yours</a>
	</div>
</nav>

<style>
	@import "open-props/src/props.media.css";

	nav {
		font-size: var(--font-size-5);
		display: flex;
		flex-direction: column;
		text-align: left;
		padding-block-end: var(--size-10);
		& > * {
			padding: var(--size-6);
		}
		& > * + * {
			border-color: var(--surface-2);
			border-block-start-width: 1px;
			border-block-end-width: 0px;
		}
	}
	a {
		color: var(--text-2);
		&:visited {
			color: var(--text-2);
		}
		&:hover {
			color: var(--text-1);
			text-decoration: none;
		}
		@media (--motionOK) {
			transition-property: color;
			transition-timing-function: var(--ease-in-out-3);
			transition-duration: 0.15s;
		}
	}
	div {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: var(--size-6);
	}
	a.btn {
		padding-block: var(--size-2);
		padding-inline: var(--size-4);
		width: 100%;
		border-radius: var(--radius-round);
		background-color: var(--link);
		text-align: center;
		color: var(--surface-1);
		&:hover {
			background-color: var(--link-hover);
		}
	}
</style>
